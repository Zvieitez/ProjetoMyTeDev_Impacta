@using System.Globalization;
@model IEnumerable<ProjetoMyTeDev.Models.RegistroDiario>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Funcionario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Wbs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horas)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcionario.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Wbs.WbsId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Horas)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RegistroDiarioId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RegistroDiarioId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RegistroDiarioId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
