@using System.Globalization;
@model IEnumerable<ProjetoMyTeDev.Models.RegistroDiario>


@{
    ViewData["Title"] = "Registro de Horas";
}

<h3>Registro de Horas</h3>

<p>
    <a asp-controller="RegistroDiarios" asp-action="Create" class="btn btn-secondary my-4"><i class="bi bi-calendar-plus"></i> Lançamento de Horas</a>
    <a asp-action="Create" class="btn btn-outline-secondary my-4">Voltar</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Funcionario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Wbs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Horas)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcionario.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Wbs.WbsId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Horas)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RegistroDiarioId"><i class="bi bi-brush"></i> Editar</a>
                        <a asp-action="Details" asp-route-id="@item.RegistroDiarioId"><i class="bi bi-eye"></i> Visualizar</a>
                        <a asp-action="Delete" asp-route-id="@item.RegistroDiarioId"><i class="bi bi-trash"></i> Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
