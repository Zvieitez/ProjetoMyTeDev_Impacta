@model ProjetoMyTeDev.Models.Cargo

@{
    ViewData["Title"] = "Delete";
}

<h3>Deletar Cargo</h3>
<br />
<h4>Você tem certeza de que deseja deletar este registro?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CargoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CargoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CargaHoraria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CargaHoraria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CargoId" />
        <input type="submit" value="Delete" class="btn btn-secondary my-4" />
        <a asp-area="" asp-controller="Cargos" asp-action="Index" class="btn btn-secondary my-4">Voltar</a>
    </form>
</div>
