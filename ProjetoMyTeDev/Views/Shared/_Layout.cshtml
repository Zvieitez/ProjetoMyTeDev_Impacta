<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoMyTeDev</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoMyTeDev.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-md border-bottom box-shadow mb-3">
            <div class="container">
                 <a class="navbar-brand m-0" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" width="60" />
                 </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="text-black fw-bold">Orange O'clock</span>
                 </a>                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Área do Administrador
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="SomenteAdmin">Dashboard</a></li>
                                    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Departamentos" asp-action="Index">Gerenciar departamento</a></li>
                                    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Wbss" asp-action="Index">Gerenciar WBS</a></li>
                                    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Cargos" asp-action="Index">Gerenciar cargos</a></li>
                                    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Funcionarios" asp-action="Index">Gerenciar funcionários</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Funcionário
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Funcionarios" asp-action="Index">Listar todos</a></li>
                                    <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Funcionarios" asp-action="Create">Cadastrar</a></li>
                                </ul>
                            </div>
                            @* <a class="nav-link text-black" asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionário</a> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-controller="RegistroDiarios" asp-action="Index">Registro Horas</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center text-wrap">
        <div class="container">
           &copy; 2024 - Orange O'clock - Desenvolvido por: Déborah, Isabella, Giovanna, Lívia e Zandra
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
