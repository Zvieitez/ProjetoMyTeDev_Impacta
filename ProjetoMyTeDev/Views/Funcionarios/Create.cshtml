@model ProjetoMyTeDev.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Funcionário";
}

<h1>Cadastrar Novo Funcionário</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FuncionarioNome" class="control-label"></label>
                <input asp-for="FuncionarioNome" class="form-control" />
                <span asp-validation-for="FuncionarioNome" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataContratacao" class="control-label"></label>
                        <input asp-for="DataContratacao" type="date" class="form-control" />
                        <span asp-validation-for="DataContratacao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Localidade</label>
                        <select asp-for="Localidade" class="form-select">
                            <option value="Recife">Recife</option>
                            <option value="São Paulo">São Paulo</option>
                            <option value="Rio de Janeiro">Rio de Janeiro</option>
                            <option value="Nova Lima">Nova Lima</option>
                        </select>
                        <span asp-validation-for="Localidade" class="text-danger"></span>
                    </div>
                    <br />
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NivelAcessoId" class="control-label"></label>
                        <select asp-for="NivelAcessoId" class="form-select" asp-items="ViewBag.NivelAcessoId"></select>
                        <span asp-validation-for="NivelAcessoId" class="text-danger"></span>
                    </div>
                </div>
            </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-secondary my-4" />
                    <a asp-area="" asp-controller="Funcionarios" asp-action="Index" class="btn btn-secondary my-4">Voltar</a>
                </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div class="row">


            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DepartamentoId" class="control-label"></label>
                    <select asp-for="DepartamentoId" class="form-select" asp-items="ViewBag.DepartamentoId"></select>
                    <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CargoId" class="control-label"></label>
                    <select asp-for="CargoId" class="form-select" asp-items="ViewBag.CargoId"></select>
                    <span asp-validation-for="CargoId" class="text-danger"></span>
                </div>
            </div>
            <br />
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
