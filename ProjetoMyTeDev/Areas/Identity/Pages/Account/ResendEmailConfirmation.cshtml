@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar Confirmação de Email";
}

<h3>@ViewData["Title"]</h3>
<h5>Digite o seu Email</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-secondary my-4">Reenviar</button>
            <a class="btn btn-outline-secondary my-4" asp-page="./Login">Voltar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
